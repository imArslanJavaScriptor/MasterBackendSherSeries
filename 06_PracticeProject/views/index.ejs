<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white font-sans">
    <div
      class="min-h-screen flex items-center justify-center px-4 gap-5 flex-col"
    >
      <!-- Task Form -->
      <div class="w-full max-w-md bg-zinc-800 rounded-2xl shadow-lg p-6">
        <h1 class="text-2xl font-bold text-center mb-6">Create a Task</h1>
        <form action="/create" method="POST" class="space-y-4">
          <input
            type="text"
            name="title"
            placeholder="Enter Your Title"
            class="w-full px-4 py-2 rounded-lg bg-zinc-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <textarea
            name="details"
            rows="4"
            placeholder="Enter Your Task Details Here"
            class="w-full px-4 py-2 rounded-lg bg-zinc-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"
          ></textarea>
          <input
            type="submit"
            value="Create Task"
            class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-semibold cursor-pointer transition duration-200"
          />
        </form>
      </div>

      <!-- Task List -->
      <div
        class="tasks text-white flex items-center justify-center gap-4 flex-wrap w-full max-w-md bg-zinc-800 rounded-2xl shadow-lg p-6"
      >
        <% if (files && files.length > 0) { %> <% files.forEach(function(val) {
        %>
        <div class="task px-3 py-4 rounded-md bg-zinc-700 w-full">
          <h1 class="text-xl font-semibold tracking-tight"><%= val.title %></h1>
          <p class="text-sm text-gray-300 mt-1"><%= val.details %></p>

          <div class="flex justify-between mt-4">
            <a
              href="/edit/<%= val.title %>"
              class="text-sm text-yellow-400 font-semibold hover:underline"
              >Edit</a
            >

            <form action="/delete" method="POST">
              <input type="hidden" name="title" value="<%= val.title %>" />
              <button
                type="submit"
                class="text-sm text-red-500 font-semibold hover:underline"
              >
                Delete
              </button>
            </form>
          </div>
        </div>
        <% }) %> <% } else { %>
        <h2 class="text-zinc-500 text-2xl font-medium text-center w-full">
          No Tasks Yet
        </h2>
        <% } %>
      </div>
    </div>

    <!-- JS -->
    <script src="/js/script.js"></script>
  </body>
</html>
